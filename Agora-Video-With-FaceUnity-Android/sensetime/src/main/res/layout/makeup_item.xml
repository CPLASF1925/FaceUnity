<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sensetime="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="@dimen/makeup_item_layout_width"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_makeup_image"
        android:layout_width="@dimen/makeup_group_item_image_size"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_centerVertical="true">

        <views.effects.widgets.RoundImageView
            android:id="@+id/makeup_group_item_image"
            android:layout_width="@dimen/makeup_item_round_image_size"
            android:layout_height="@dimen/makeup_item_round_image_size"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            sensetime:borderRadius="8dp"
            sensetime:type="circle"/>
        <TextView
            android:id="@+id/makeup_group_item_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/makeup_item_text_height"
            android:layout_gravity="center_horizontal"
            android:textAlignment="gravity"
            android:gravity="center"
            android:textColor="@color/beauty_option_text_color"
            android:singleLine="true"
            android:ellipsize="end"/>
    </LinearLayout>

</RelativeLayout>
