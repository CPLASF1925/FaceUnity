<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/beauty_option_min_value_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/beauty_option_progress_margin"
        android:textSize="@dimen/beauty_option_item_text_size"
        android:textColor="@android:color/white"/>
    <TextView
        android:id="@+id/beauty_option_max_value_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/beauty_option_progress_margin"
        android:textSize="@dimen/beauty_option_item_text_size"
        android:textColor="@android:color/white"/>
    <SeekBar
        android:id="@+id/beauty_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="2dp"
        android:minHeight="2dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/beauty_option_progress_margin_small"
        android:layout_marginRight="@dimen/beauty_option_progress_margin_small"
        android:layout_toEndOf="@id/beauty_option_min_value_text"
        android:layout_toStartOf="@id/beauty_option_max_value_text"
        android:progressDrawable="@drawable/bg_seekbar_progressbar"
        android:thumb="@drawable/seekbar_thumb"/>
</RelativeLayout>
