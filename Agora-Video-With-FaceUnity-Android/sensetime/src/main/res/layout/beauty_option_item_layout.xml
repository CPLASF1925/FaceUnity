<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/beauty_option_item_width"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/beauty_option_item_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/beauty_option_item_icon"
            android:layout_width="@dimen/beauty_option_item_icon_size"
            android:layout_height="@dimen/beauty_option_item_icon_size"
            android:scaleType="centerInside"/>
        <TextView
            android:id="@+id/beauty_option_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/beauty_option_item_subscript_text_size"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/beauty_option_text_color"
            android:textSize="@dimen/beauty_option_item_text_size"/>
        <TextView
            android:id="@+id/beauty_item_subscription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/beauty_option_item_subscript_text_size"
            android:layout_marginTop="@dimen/beauty_option_item_content_margin_top"
            android:layout_gravity="center_horizontal"
            android:textAlignment="gravity"
            android:gravity="center"
            android:textColor="@color/beauty_option_text_color"
            android:background="@drawable/bg_beauty_item_subscript"/>
    </LinearLayout>
</RelativeLayout>
